{
    "$schema": "https://dl.viam.dev/module.schema.json",
    "module_id": "erh:viamtriggers",
    "visibility": "public",
    "url": "https://github.com/erh/viamtriggers",
    "description": "library for various kinds of triggers based on sensors",
    "models": [
        {
            "api": "rdk:service:generic",
            "model": "erh:viamtriggers:movement-motion",
            "short_description": "trigger a switch based on movement from a Movement Sensor",
            "markdown_link": "README.md#movement-motion"
        },
        {
            "api": "rdk:service:generic",
            "model": "erh:viamtriggers:sunset-lights",
            "short_description": "turn lights on after sunset",
            "markdown_link": "README.md#sunset-lights"
        }

    ],
    "entrypoint": "bin/viamtriggersmodule",
    "first_run": "",
    "build": {
        "build": "make module.tar.gz",
        "setup": "make setup",
        "path": "module.tar.gz",
        "arch": [
            "linux/amd64",
            "linux/arm64"
        ]
    }
}
